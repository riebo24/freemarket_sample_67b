.background2
  
  .headder
    = render 'devise/shared/headder'
    
  .field-base
    .main-user
      %h2 会員情報入力
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
    
      .main-user__fields
        .main__fields__element
          .main-user__fields__element__title
            = f.label :nickname, "ニックネーム", class: 'main-user__fields__element__title__label'
            .main-user__fields__element__title__notice
              必須
          = f.text_field :nickname, autofocus: true, placeholder: '例）キャベツ太郎', class: 'main-user__fields__element__text'
      .main-user__fields
        .main-user__fields__element
          .main-user__fields__element__title
            = f.label :email, "メールアドレス", class: 'main-user__fields__element__title__label'
            .main-user__fields__element__title__notice
              必須
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'PC.携帯どちらでも可能', class: 'main-user__fields__element__text'
        
      .main-user__fields
        .main-user__fields__element
          .main-user__fields__element__title
            = f.label :password, "パスワード", class: 'main-user__fields__element__title__label'
            .main-user__fields__element__title__notice
              必須
          = f.password_field :password, autocomplete: "password", placeholder: '７文字以上のパスワード', class: 'main-user__fields__element__text'

      .main-user__fields
        .main-user__fields__element
          .main-user__fields__element__title
            = f.label :password, "パスワード(確認用)", class: 'main-user__fields__element__title__label'
            .main-user__fields__element__title__notice
              必須
          = f.password_field :password, autocomplete: "password", placeholder: 'パスワード（確認用）', class: 'main-user__fields__element__text'

      .main-user__field
        %h3 本人確認
        .main-user__field__text
          安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。

      .main-user__fields
        .main-user__fields__element
          .main-user__fields__element__title
            .main-user__fields__element__title__label
            お名前（全角）
            .main-user__fields__element__title__notice
              必須
        .main-user__fields__name
          = f.text_field :first_name, autofocus: true, class: 'main-user__fields__name__tag1', placeholder: '例）山田'
          = f.text_field :last_name, autofocus: true, class: 'main-user__fields__name__tag2', placeholder: '例）真'

      .main-user__fields
        .main-user__fields__element
          .main-user__fields__element__title
            .main-user__fields__element__title__label
            お名前カナ（全角）
            .main-user__fields__element__title__notice
              必須
        .main-user__fields__name
          = f.text_field :first_kane, autofocus: true, class: 'main-user__fields__name__tag1', placeholder: '例）ヤマダ'
          = f.text_field :last_kane, autofocus: true, class: 'main-user__fields__name__tag2', placeholder: '例）マコト'

      .main-user__fields
        .main-user__fields__element
          .main-user__fields__element__title
            .main-user__fields__element__title__label
              生年月日
            .main-user__fields__element__title__notice
              必須
          = f.text_field :birthday, autofocus: true, class: 'main-user__fields__element__text', placeholder: '例）20200221'

      .main-user__fields
        %h2 住所登録         
        .main-user__fields__element
          .main-user__fields__element__title
            = f.label :post_number, "郵便番号", class: 'main-user__fields__element__title__label'
            .main-user__fields__element__title__notice
              必須
          = f.text_field :post_number, autofocus: true, class: 'main-user__fields__element__text', placeholder: '1234567'
        .main-user__fields__element
          .main-user__fields__element__title
            = f.label :prefecture, "都道府県", class: 'main-user__fields__element__title__label'
            .main-user__fields__element__title__notice
              必須
          = f.text_field :prefecture, autofocus: true, class: 'main-user__fields__element__text', placeholder: '東京都'
        .main-user__fields__element
          .main-user__fields__element__title
            = f.label :city, "市町村", class: 'main-user__fields__element__title__label'
            .main-user__fields__element__title__notice
              必須
          = f.text_field :city, autofocus: true, class: 'main-user__fields__element__text', placeholder: '大阪市'
        .main-user__fields__element
          .main-user__fields__element__title
            = f.label :house_number, "番地", class: 'main-user__fields__element__title__label'
            .main-user__fields__element__title__notice
              必須
          = f.text_field :house_number, autofocus: true, class: 'main-user__fields__element__text', placeholder: '１−１−１'
        .main-user__fields__element
          .main-user__fields__element__title
            = f.label :building_name, "建物名", class: 'main-user__fields__element__title__label'
            .main-user__fields__element__title__selective
              任意
          = f.text_field :building_name, autofocus: true, class: 'main-user__fields__element__text', placeholder: '小見マンション'
        .main-user__fields__element
          .main-user__fields__element__title
            = f.label :phone_number , "電話番号", class: 'main-user__fields__element__title__label'
            .main-user__fields__element__title__selective
              任意
          = f.text_field :phone_number , autofocus: true, class: 'main-user__fields__element__text', placeholder: '0901234567'
        .main-user__fields__element
          .main-user__fields__element__title
            = f.label :card , "カード番号", class: 'main-user__fields__element__title__label'
            .main-user__fields__element__title__selective
              任意
          = f.text_field :card , autofocus: true, class: 'main-user__fields__element__text', placeholder: 'スペースは不要です'
        .main-user__fields__element
          .main-user__fields__element__title
            = f.label :profile , "自己紹介など", class: 'main-user__fields__element__title__label'
            .main-user__fields__element__title__notice
              必須
          = f.text_field :profile , autofocus: true, class: 'main-user__fields__element__text', placeholder: '私はビートルズのファンです'
      
